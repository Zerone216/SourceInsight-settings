				InsBufLine(hbuf,ln,"@szLeftOld@{")
				nExitCount = nExitCount + 1
				nLineEnd = nLineEnd + 3
				ln = ln + 3
			}
			else
			{
				fIsNeedPrt = 0
				szEnd = cat(szLeft,"VOS_Debug_Trace(\"\\r\\n |@symbolname@() exit---: @nExitCount@ \");")
				InsBufLine(hbuf, ln, szEnd )
				nExitCount = nExitCount + 1
